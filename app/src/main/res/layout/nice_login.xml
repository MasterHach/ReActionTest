<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    tools:context="com.alex.reactiontest.fragments.LoginFragment">

    <TextView
        android:id="@+id/name_auth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|center"
        android:layout_marginStart="0dp"
        android:layout_marginTop="70dp"
        android:fontFamily="@font/aclonica"
        android:gravity="center"
        android:text="@string/auth"
        android:textColor="@color/black"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/name_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="26dp"
        android:layout_marginTop="90dp"
        android:layout_marginBottom="5dp"
        android:fontFamily="@font/aclonica"
        android:text="@string/n_mero_do_cart_o_string"
        android:textColor="@color/n_mero_do_cart_o_color"
        android:textSize="17sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edit_email"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_gravity="center_horizontal|center"
        android:layout_marginStart="26dp"
        android:layout_marginEnd="26dp"
        android:layout_weight="0"
        android:background="@drawable/round_border"
        android:fontFamily="@font/aclonica"
        android:hint="@string/_____________________string"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:textColor="@color/_____________________color"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/n_mero_do_cart_o"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginStart="26dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="26dp"
        android:layout_marginBottom="5dp"
        android:layout_weight="0"
        android:fontFamily="@font/aclonica"
        android:gravity="bottom"
        android:text="@string/n_mero_do_cart_o_ek1_string"
        android:textColor="@color/n_mero_do_cart_o_color"
        android:textSize="17sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edit_password"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_gravity="center_horizontal|center"
        android:layout_marginStart="26dp"
        android:layout_marginEnd="26dp"
        android:layout_weight="0"
        android:background="@drawable/round_border"
        android:fontFamily="@font/aclonica"
        android:hint="@string/_____________________ek1_string"
        android:inputType="textPassword"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:textColor="@color/_____________________color"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/go_to_register"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginStart="26dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="26dp"
        android:layout_weight="0"
        android:clickable="true"
        android:focusable="true"
        android:fontFamily="@font/aclonica"
        android:gravity="bottom"
        android:text="@string/no_account"
        android:textColor="@color/________________________color"
        android:textSize="16sp" />
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:backgroundTint="@color/black"/>

    <Button
        android:id="@+id/login_button"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_gravity="center_horizontal|center"
        android:layout_marginStart="26dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="26dp"
        android:layout_weight="0"
        android:backgroundTint="@color/black"
        android:elevation="3dp"
        android:fontFamily="@font/aclonica"
        android:insetTop="0dp"
        android:insetBottom="4dp"
        android:stateListAnimator="@null"
        android:text="@string/btn_auth"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:translationZ="4dp"
        app:cornerRadius="11dp" />

    <Button
        android:id="@+id/google_button_reg"
        style="@style/ButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_gravity="center_horizontal|center"
        android:layout_marginStart="26dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="26dp"
        android:layout_marginBottom="40dp"
        android:layout_weight="0"
        android:background="@drawable/round_border"
        android:backgroundTint="@android:color/transparent"
        android:drawableLeft="@drawable/google"
        android:elevation="3dp"
        android:fontFamily="@font/aclonica"
        android:stateListAnimator="@null"
        android:text="@string/adicionar_cart_o_string"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:translationZ="4dp"
        app:cornerRadius="11dp" />


</LinearLayout>